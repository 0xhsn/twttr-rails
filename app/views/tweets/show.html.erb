<!DOCTYPE html>
<html>
  <%= render "shared/head" %>
  <body>
    <div class="container py-4">
      <!-- Sidebar (Top Section on Mobile) -->
      <div class="row">
        <div class="col-12 mb-3">
          <%= link_to 'javascript:history.back()', class: "text-secondary text-decoration-none" do %>
            <i class="material-icons">arrow_back</i>
          <% end %>
        </div>
      </div>
      <%= turbo_frame_tag dom_id(@tweet_presenter.tweet) do %>
        <div class="tweet py-4 px-1 px-md-3 d-flex align-items-center justify-content-between" style="width: 100%;">
          <div style="flex-grow: 1; min-width: 0; display: flex; align-items: center;">
            <div class="flex-shrink-0 me-2" style="max-width: 50px;">
              <% if @tweet_presenter.user && @tweet_presenter.avatar.attached? %>
                <%= image_tag @tweet_presenter.avatar, size: 48, class: "rounded-circle img-fluid" %>
              <% else %>
                <%= image_tag "default_avatar.png", size: 48, class: "rounded-circle img-fluid" %>
              <% end %>
            </div>
            <div class="tweet-body-container" style="flex-grow: 1; min-width: 0;">
              <span class="fs-4 mb-1">@<%= @tweet_presenter.username %></span>
              <p class="fs-5 mb-0 ml-1 fw-light tweet-body" style="word-wrap: break-word; overflow-wrap: break-word;"> <%= @tweet_presenter.body %> </p>
              <span class="date-time fw-light text-secondary"><%= @tweet_presenter.created_at %></span>&nbsp;<span class="date-time fw-light text-secondary">â€¢ <%= @tweet_presenter.tweet.created_at.strftime("%l:%M %p") %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </body>
</html>