<% if user_signed_in? %>
    <h1>yo yo</h1>
    <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "btn btn-primary mb-3" %>
    <%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true do |f| %>
        <%= f.text_field :body %>
        <%= f.submit %>
    <% end %>

    <ul>
        <% Tweet.find_each do |tweet| %>
            <li><%= tweet.body %></li>
        <% end %>
    </ul>
<% else %>
    <h1>sup</h1>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-primary" %>
<% end %>
